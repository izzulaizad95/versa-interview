{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "es2022", "es2020", "es2017", "es7", "es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": true,
    "paths": {
      "*": ["src/types/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "test/**/*.test.ts", "**/*.eslintrc.cjs"],
  "exclude": ["node_modules"]
}
